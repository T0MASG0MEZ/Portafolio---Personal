---
const { title } = Astro.props;
import Bentoarticulo from "./subcomponents/Bentoarticulo.astro";
import Logoreact from "./subcomponents/icons/Logoreact.astro";
---

<article
    class=`
    ${ Astro.props.class }
    flex flex-col shadow-2xl shadow-white/10 border border-black/20`
>
    <div class="flex justify-center">
        <h2 class="text-2xl text-white/90 p-4">{title}</h2>
    </div>
    <div class="grilla">
        <Bentoarticulo name="React">
            <Logoreact />
        </Bentoarticulo>
    </div>
</article>

<style>
    .grilla {
        padding: 2rem;
        max-width: 1440px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 1rem;

    }
</style>
