---
import Github from "./Iconos/github.astro";
import Mail from "./Iconos/mail.astro";
import Linkedin from "./Iconos/linkedin.astro";
import Buttonanimate from "./subcomponents/buttonanimate.astro";
---

<ul class="flex justify-center gap-9 m-12">
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a href="" class="flex items-center gap-2">
            <Buttonanimate>
                <Linkedin />
                <h2 class="text-xl pl-2">Linkedin</h2>
            </Buttonanimate>
        </a>
    </li>
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a href="" class="flex items-center gap-2">
            <Buttonanimate>
                <Github />
                <h2 class="text-xl pl-2">Github</h2>
            </Buttonanimate>
        </a>
    </li>
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a href="" class="flex items-center gap-2">
            <Buttonanimate>
                <Mail />
                <h2 class="text-xl pl-2">tomas_goomez@outlook.com</h2>
            </Buttonanimate>
        </a>
    </li>
</ul>
