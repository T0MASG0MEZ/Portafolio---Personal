---
import Github from "./Iconos/github.astro";
import Mail from "./Iconos/mail.astro";
import Linkedin from "./Iconos/linkedin.astro";
import Buttonanimate from "./subcomponents/buttonanimate.astro";
---

<ul class="flex justify-center flex-col lg:flex-row items-center gap-9 m-12">
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a
            href="https://www.linkedin.com/in/tomas-gomez-anzani-3161a6263/"
            target="_blank"
            class="flex items-center gap-2"
        >
            <Buttonanimate>
                <Linkedin />
                <h2 class="text-lg md:text-xl pl-2">Linkedin</h2>
            </Buttonanimate>
        </a>
    </li>
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a href="mailto:tomas_goomez@outlook.com" class="flex items-center gap-2">
            <Buttonanimate>
                <Mail />
                <h2 class="text-lg md:text-xl pl-2" id="text">
                    Contactame
                </h2>
            </Buttonanimate>
        </a>
    </li>
    <li
        class="px-5 py-2 rounded-3xl hover:-translate-y-1 transition-all duration-150"
    >
        <a
            href="https://github.com/T0MASG0MEZ"
            target="_blank"
            class="flex items-center gap-2"
        >
            <Buttonanimate>
                <Github />
                <h2 class="text-lg md:text-xl pl-2">Github</h2>
            </Buttonanimate>
        </a>
    </li>
</ul>
